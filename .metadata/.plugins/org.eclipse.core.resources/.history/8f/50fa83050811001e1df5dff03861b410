package lab4.bai2;

import java.util.Scanner;

public class App {

	public static void main(String[] args) {
		Scanner scanner = new Scanner(System.in);
		System.out.println("Thong tin lop hoc");
		LopHoc classRoom = new LopHoc();
		classRoom.nhapThongTin(scanner);
		System.out.println("Thong tin hoc sinh");

		HocSinh student = new HocSinh();
		student.nhapThongTin(scanner);
		student.setGiaoVienChuNhiem(scanner.nextLine());
		student.setThoiKhoaBieu(scanner.nextLine());
		student.setLopHoc(scanner.nextLine());

		System.out.println("Thong tin giao vien");
		GiaoVien teacher = new GiaoVien();
		teacher.nhapThongTin(scanner);
		System.out.println("Thong tin nhan vien");

		NhanVien employee = new NhanVien();
		employee.nhapThongTin(scanner);
		employee.setPhongBan(scanner.nextLine());
		employee.setChucVu(scanner.nextLine());

		System.out.println("Hien thi thong tin lop hoc");

	}

}
