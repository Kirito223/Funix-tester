package lab4.bai2;

import java.util.Scanner;

public class HocSinh extends Person implements IHienThi {
	private String giaoVienChuNhiem, lopHoc, thoiKhoaBieu;

	@Override
	public void nhapThongTin(Scanner scanner) {
		super.nhapThongTin(scanner);
		System.out.println("Nhap giao vien chu nhiem");
		this.giaoVienChuNhiem = scanner.nextLine();
		System.out.println("Nhap lop hoc");
		this.lopHoc = scanner.nextLine();
		System.out.println("Nhap thoi khoa bieu");
		this.thoiKhoaBieu = scanner.nextLine();
	}

	@Override
	public void hienThiThongTin() {
		// TODO Auto-generated method stub
		super.hienThiThongTin();
		System.out.println("Giao vien chu nhiem: " + this.giaoVienChuNhiem);
		System.out.println("Lop hoc: " + this.lopHoc);
	}

	public String getGiaoVienChuNhiem() {
		return giaoVienChuNhiem;
	}

	public void setGiaoVienChuNhiem(String giaoVienChuNhiem) {
		this.giaoVienChuNhiem = giaoVienChuNhiem;
	}

	public String getLopHoc() {
		return lopHoc;
	}

	public void setLopHoc(String lopHoc) {
		this.lopHoc = lopHoc;
	}

	public String getThoiKhoaBieu() {
		return thoiKhoaBieu;
	}

	public void setThoiKhoaBieu(String thoiKhoaBieu) {
		this.thoiKhoaBieu = thoiKhoaBieu;
	}

	@Override
	public void hienThiThoKhoaBieu() {
		System.err.println("Thoi khoa bieu" + this.thoiKhoaBieu);

	}

	@Override
	public void hienThiThongTinLop() {
		System.out.println("hoc sinh" + this.lopHoc);

	}

}
