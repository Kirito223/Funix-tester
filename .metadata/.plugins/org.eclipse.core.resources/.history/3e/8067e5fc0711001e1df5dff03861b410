package lab4.bai2;

import java.util.Scanner;

public class LopHoc {
	private String tenlop;
	private int siSo;
	private String khoi;

	public void nhapThongTin(Scanner scanner) {
		System.out.println("Nhap ten lop");
		this.tenlop = scanner.nextLine();
		System.out.println("Nhap si so");
		this.siSo = Integer.parseInt(scanner.nextLine());
		System.out.println("Nhap khoi");
		this.khoi = scanner.nextLine();
	}

	public void hienThiThongTin() {
		System.out.println("Ten lop: " + this.tenlop);
		System.out.println("Si so: " + this.siSo);
	}

	public String getTenlop() {
		return tenlop;
	}

	public void setTenlop(String tenlop) {
		this.tenlop = tenlop;
	}

	public int getSiSo() {
		return siSo;
	}

	public void setSiSo(int siSo) {
		this.siSo = siSo;
	}

	public String getKhoi() {
		return khoi;
	}

	public void setKhoi(String khoi) {
		this.khoi = khoi;
	}
}
